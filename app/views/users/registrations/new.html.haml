.registration-header
  = link_to root_path, class: '' do
    = icon 'fas', 'chess'
    Tech_Reserve
  %h1
    新規登録
.registration-form
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .field
      .field__label
        = f.label 'ニックネーム'
        %span.field__label--form-require 必須
      - if @user.errors.include?(:nickname)
        .field__input
          = f.text_field :nickname, autofocus: true
          = render partial: 'shared/error-messages', locals: {object: @user, column: 'nickname'}
      - else
        .field__input
          = f.text_field :nickname, autofocus: true
    .field
      .field__label
        = f.label 'メールアドレス'
        %span.field__label--form-require 必須
      - if @user.errors.include?(:email)
        .field__input
          = f.email_field :email, autocomplete: "email"
          = render partial: 'shared/error-messages', locals: {object: @user, column: 'email'}
      - else  
        .field__input
          = f.email_field :email, autocomplete: "email"
    .field
      .field__label
        = f.label 'パスワード'
        %span.field__label--form-require 必須
      - if @user.errors.include?(:password)
        .field__input  
          = f.password_field :password, autocomplete: "new-password"
          = render partial: 'shared/error-messages', locals: {object: @user, column: 'password'}
      - else
        .field__input  
          = f.password_field :password, autocomplete: "new-password"
    .field
      .field__label
        = f.label 'パスワード（確認）'
        %span.field__label--form-require 必須
      - if @user.errors.include?(:password_confirmation)
        .field__input
          = f.password_field :password_confirmation, autocomplete: "new-password"
          = render partial: 'shared/error-messages', locals: {object: @user, column: 'password_confirmation'}
      - else
        .field__input
          = f.password_field :password_confirmation, autocomplete: "new-password"
    .field
      = f.submit "登録", class: 'red-btn'
    -# .device-links
    -#   = render "users/shared/links"
